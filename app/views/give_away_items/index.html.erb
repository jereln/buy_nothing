<h1>Give Away Items</h1>
<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td> <%= link_to item.title, item %></td>
        <td> <%= item.description %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Post An Item', new_give_away_item_path %>