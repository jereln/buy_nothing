<%= form_for @item, html: {multipart: true} do |f| %>


  <% if @item.errors.any? %>
    <div id="error_explanation">c
      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p><%= f.label :title %><br>
  <%= f.text_field :title %><br></p>

  <p><%= f.label :description %><br>
  <%= f.text_area :description %><br></p>

  <p><%= f.file_field :give_away_item_image %><br></p>

  <p><%= f.submit 'Post Item' %></p>

<% end %>